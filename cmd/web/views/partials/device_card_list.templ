//go:generate templ generate
package partials

import "sd/pkg/types"

templ DeviceCardList(instanceID string, devices []types.Device) {
	<div
		id="device-card-list"
		class="space-y-2"
	>
		if len(devices) == 0 {
			<div class="text-gray-400">No devices connected</div>
		} else {
			for _, device := range devices {
				@DeviceCard(instanceID, device)
			}
		}
	</div>
}
